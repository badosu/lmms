
INCLUDE(FindPkgConfig)
pkg_check_modules(LILV lilv-0)

IF(LILV_LIBRARIES AND LILV_INCLUDE_DIRS)
	SET(LILV_FOUND TRUE)
ELSE(LILV_LIBRARIES AND LILV_INCLUDE_DIRS)
	IF(LILV_FOUND)
		IF(NOT Lilv_FIND_QUIETLY)
			MESSAGE(STATUS "Found Lilv: $(LILV_LIBRARIES}")
		ENDIF(NOT Lilv_FIND_QUIETLY)
	ELSE(LILV_FOUND)
		IF(Lilv_FIND_REQUIRED)
			MESSAGE(FATAL_ERROR "Could not find Lilv")
		ENDIF(Lilv_FIND_REQUIRED)
	ENDIF(LILV_FOUND)
	mark_as_advanced(LILV_INCLUDE_DIRS LILV_LIBRARIES)
ENDIF(LILV_LIBRARIES AND LILV_INCLUDE_DIRS)
